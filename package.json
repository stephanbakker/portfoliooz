{
  "name": "portfoliooz",
  "version": "0.2.3",
  "description": "portfolio gallery",
  "main": "server.bundle.js",
  "scripts": {
    "start": "node server.bundle",
    "start:dev": "nodemon --inspect server.bundle.js",
    "dev:client": "webpack -w",
    "build": "npm run build:client && npm run build:server",
    "build:prod": "NODE_ENV=production npm run build:client && npm run build:server && npm run build:css:prod",
    "build:server": "webpack --config webpack.server.config.js --progress --colors",
    "build:client": "webpack",
    "build:css": "node-sass --include-path client client/main.scss public/main.css",
    "build:css:prod": "node-sass --include-path client --output-style compressed client/main.scss public/main.css",
    "watch:css": "npm run build:css -- -w",
    "watch:server": "npm run build:server -- -w",
    "dev": "concurrently 'npm run dev:client' 'npm run watch:css' 'npm run watch:server'",
    "lint": "eslint server/**/*.js",
    "lint:w": "watch 'npm run lint' server",
    "test:compile": "webpack --config webpack.servertest.config.js --progress --colors",
    "test": "npm run test:compile && mocha servertest.bundle.js"
  },
  "author": "stephanbakker",
  "license": "ISC",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "browser-sync": "^2.10.0",
    "chai": "^3.5.0",
    "concurrently": "^2.1.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-config-google": "^0.6.0",
    "eslint-plugin-react": "^5.2.2",
    "glob": "^7.0.5",
    "mocha": "^2.5.3",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "sinon": "^1.17.4",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "body-parser": "^1.16.1",
    "compression": "^1.6.2",
    "express": "^4.16.2",
    "express-handlebars": "^2.0.1",
    "flickrapi": "^0.6.0",
    "helmet": "^3.4.1",
    "marked": "^0.3.6",
    "mongodb": "^2.0.52",
    "mongoose": "^4.3.6",
    "nconf": "^0.8.2",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^3.0.0",
    "request": "^2.67.0",
    "serve-favicon": "^2.3.0"
  }
}
